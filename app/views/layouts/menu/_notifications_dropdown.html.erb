<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <b><span id="notifications_count"><%= @new_notifications.count %></span></b>
    <i class="icon-flag icon-white"></i>
    <b class="caret"></b>
  </a>
  <ul class="dropdown-menu">
    <% @new_notifications.each { |notification| %>
      <li>
        <%= render 'layouts/menu/dropdown_notification', notification: notification %>
      </li>
    <% } %>
    <% @old_notifications.each { |notification| %>
      <li>
        <%= render 'layouts/menu/dropdown_notification', notification: notification %>
      </li>
    <% } %>
  </ul>
</li>