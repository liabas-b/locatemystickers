<% provide(:title, 'Editing zone') %>
<div class="container-fluid page-content">
<%= render 'users/user_info_header', user: @user %>

  <div class="row-fluid">
    <div id="zone" style="position:relative;top:-240px"></div>
    <div id="zone-zone" class="well well-padding paper-shadow">
      <%= render 'form' %>
      <%= link_to 'Show', user_sticker_zone_path(@user, @sticker, @zone) %> |
      <%= link_to 'Back', user_sticker_zones_path(@user, @sticker) %>
  </div>
  <% if @polygons_json != nil && @polygons_json.length > 0 %>
    <div id="resizable-map" class="row-fluid">
      <div id="last-locations"></div>
      <%= render 'shared/map_with_options' %>
    </div>
  <% end %>
</div>

<!-- Sidebar Fixed left -->
<% content_for :sidebar do %>
  <%= render 'users/friends', user: @user %>
  <h3>Navigate</h3>
  <ul id="sidebar-nav" class="nav nav-list affix" data-offset-top="200px">
    <li><a href="#zone">Properties</a></li>
    <% if @polygons_json != nil && @polygons_json.length > 0 %>
     <li><a href="#resizable-map">Map</a></li>
    <% end %>
  </ul>
<% end %>
