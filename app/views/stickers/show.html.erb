<% provide(:title, @sticker.name) %>
<div class="container-fluid user-info">
  <div class="page-header-back"></div>
  <div class="row-fluid">
		<%= render 'users/user_info', user: @user, span_size: 12 %>
	</div>
</div>

<div class="container-fluid page-content-with-header">
  <div id="user-stickers" class="row-fluid">
    <div id="sticker" style="position:relative;top:-240px"></div>
    <div id="stickers" class="row-fluid">
			<%= render 'sticker_info_min', sticker: @sticker, user: @user, locations: @locations, zones: @zones, span_size: 12 %>
	  </div>
  </div>
  <% if @markers_json != nil && @markers_json.length > 0 %>
  <div id="resizable-map" class="row-fluid">
    <div id="last-locations" style="position:relative;top:-250px"></div>
    <%= render 'shared/map_with_options' %>
  </div>
  <br/>
  <br/>
  <% end %>
</div>

<!-- Sidebar Fixed left -->
<div class="sidebar">
  <h3>Navigate</h3>
  <ul id="sidebar-nav" class="nav nav-list affix" data-offset-top="200px">
    <li><a href="#sticker">Sticker</a></li>
    <li><a href="#last-locations" class="last-locations">Map</a></li>
  </ul>
</div>

